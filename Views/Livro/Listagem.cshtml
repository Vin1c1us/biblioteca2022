@model List<Livro>
@{
    ViewData["Title"] = "Listagem de Livros";
    int PAGING = 10;
}
<div class="row">
    <div class="col-md-12">
        <form class="form-inline" asp-action="Listagem" method="POST">
            <div class="form-group mb-2">
                <select name="TipoFiltro" class="form-control">
                    <option value="Autor">Autor</option>
                    <option value="Titulo">Título</option>
                </select>
            </div>
            <div class="form-group mb-2 mx-sm-3">
                <input type="text" placeholder="Filtro" name="Filtro" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titulo</th>
                    <th>Autor</th>
                    <th>Ano</th>
                    <th></th>
                </tr>
            </thead>

            @if (Model.Count > 0)
            {
                if (Model.Count < PAGING)
                {
                    <tbody>
                        @foreach (Livro l in Model)
                        {
                            <tr>
                                <td>@l.Id</td>
                                <td>@l.Titulo</td>
                                <td>@l.Autor</td>
                                <td>@l.Ano</td>
                                <td><a href="/Livro/Edicao/@l.Id">Editar</a></td>
                            </tr>
                        }
                    </tbody>
                }

                else
                {
                    int pages = Model.Count / PAGING + 1;

                    for (int j = 0; j < pages; j++)
                    {
                        if (j == 0)
                        {
                            <tbody id="table-@j">
                                @for (int i = 0; i < PAGING; i++)
                                {
                                    <tr>
                                        <td>@Model[i].Id</td>
                                        <td>@Model[i].Titulo</td>
                                        <td>@Model[i].Autor</td>
                                        <td>@Model[i].Ano</td>
                                        <td><a href="/Livro/Edicao/@Model[i].Id">Editar</a></td>
                                    </tr>
                                }
                            </tbody>

                        }
                        else
                        {
                            if (j != pages - 1)
                            {
                                <tbody style="display: none;" id="table-@j">
                                    @for (int i = 0 + j * PAGING; i < PAGING + j * PAGING; i++)
                                    {
                                        <tr>
                                            <td>@Model[i].Id</td>
                                            <td>@Model[i].Titulo</td>
                                            <td>@Model[i].Autor</td>
                                            <td>@Model[i].Ano</td>
                                            <td><a href="/Livro/Edicao/@Model[i].Id">Editar</a></td>
                                        </tr>
                                    }
                                </tbody>
                            }
                            else
                            {
                                <tbody style="display: none;" id="table-@j">
                                    @for (int i = 0 + j * PAGING; i < Model.Count; i++)
                                    {
                                        <tr>
                                            <td>@Model[i].Id</td>
                                            <td>@Model[i].Titulo</td>
                                            <td>@Model[i].Autor</td>
                                            <td>@Model[i].Ano</td>
                                            <td><a href="/Livro/Edicao/@Model[i].Id">Editar</a></td>
                                        </tr>
                                    }
                                </tbody>
                            }
                        }
                    }
                }
            }

            else
            {
                <p class="text-danger">Nenhum livro encontrado!</p>
            }

        </table>
    </div>
</div>

@if (Model.Count > PAGING)
{
    int pages = Model.Count / PAGING + 1;
    <input type="text" id="currentPage" style="display: none;" value="0" />
    <input type="text" id="maxPage" style="display: none;" value="@(Model.Count/PAGING + 1)" />

    <nav aria-label="Páginas da listagem de livros">
        <ul class="pagination">
            <li class="page-item disabled" id="prev" onclick="MudarPagina(-1)">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 0; i < pages; i++)
            {
                if (i == 0)
                {
                    <li class="page-item active" onclick="Paginacao(@i)"><a class="page-link" href="#">@(i+1)</a></li>

                }
                else
                {
                    <li class="page-item" onclick="Paginacao(@i)"><a class="page-link" href="#">@(i+1)</a></li>
                }
            }
            <li class="page-item" id="next" onclick="MudarPagina(1)">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}